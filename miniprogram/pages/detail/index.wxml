<!--pages/detail/detail.wxml-->
<view class="detail-search">
  <t-search model:value="{{value}}" placeholder="搜索" />
</view>


<t-cell-group title="机型列表" theme="card">
  <!-- item.pd_imgs 的意思是第0个数组表达的图片永远是头图 -->
  <t-cell title="{{item.pd_name}}" description="手机型号：{{item.model}}，{{item.rel_year}} 发" align="top" image="{{item.pd_imgs[0]}}" hover bordered="{{false}}" wx:for="{{dtinfo}}" wx:key="index" arrow />
</t-cell-group>