<!--pages/pdinfo/router/index.wxml-->
<x-navbar />

<view wx:if="{{now_loading}}">
  <x-skel skstyle="detail"></x-skel>
</view>

<!-- 如果这里不加 {{now_loading == false}} 那么效果会不好看 -->
<view wx:if="{{now_loading == false}}">
  <!-- x-ihead 自定义介绍页组件 -->
  <x-ihead
    x_pd_name="{{rtinfo.pd_name}}"
    x_slogan="{{rtinfo.slogan}}"
    x_iconlist="{{rtinfo.icon_list}}"
    x_pd_img="{{rtinfo.pd_head_image}}"
  ></x-ihead>

  <t-cell-group theme="card">
    <t-cell title="型号" description="{{rtinfo.model}}" hover />
    <t-cell title="发布日期" description="{{rtinfo.rel_date}}" hover />
    <t-cell title="支持状态" description="{{rtinfo.spt_status}}" hover />
    <t-cell title="材质" description="{{rtinfo.material}}" hover />
    <t-cell title="尺寸和重量" description="{{rtinfo.weight}}" hover />
    <t-cell title="防水等级" description="{{rtinfo.water}}" hover />
    <t-cell title="颜色" description="{{rtinfo.colors}}" hover="" />
  </t-cell-group>

  <t-cell-group theme="card" title="系统">
    <!-- 无线路由器的处理器频率和核心数量不需要单独分类，因此直接合并到处理器的数据里面。 -->
    <t-cell title="处理器" description="{{rtinfo.system.cpu_name}}" hover />
    <t-cell title="处理器架构" description="{{rtinfo.system.cpu_arch}}" hover />
    <t-cell title="内存大小" description="{{rtinfo.system.ram_name}}" hover />
    <t-cell title="存储容量" description="{{rtinfo.system.stor_size}}" hover />
  </t-cell-group>

  <t-cell-group theme="card" title="网络">
    <t-cell title="WAN口数量" description="{{rtinfo.network.wan_num}}" hover />
    <t-cell title="LAN口数量" description="{{rtinfo.network.lan_num}}" hover />
  </t-cell-group>

  <t-cell-group theme="card" title="软件">
    <t-cell title="出厂系统" description="{{rtinfo.software.def_os}}" hover />
    <t-cell
      title="最高支持系统"
      description="{{rtinfo.software.last_os}}"
      hover
    />
    <t-cell title="基础" description="{{rtinfo.software.base_ver}}" hover />
    <t-cell title="内核" description="{{rtinfo.software.krnl}}" hover />
    <t-cell title="预装" description="{{rtinfo.software.presoft}}" hover />
  </t-cell-group>

  <t-cell-group theme="card" title="电源">
    <t-cell title="配套电源" description="{{rtinfo.power.charger}}" hover="" />
  </t-cell-group>

  <t-cell-group theme="card" title="工作环境">
    <t-cell title="工作温度" description="{{rtinfo.env.opt_temp}}" hover="" />
    <t-cell
      title="工作湿度"
      description="{{rtinfo.env.opt_humidity}}"
      hover=""
    />
    <t-cell title="工作海拔" description="{{rtinfo.env.opt_alti}}" hover="" />
  </t-cell-group>

  <t-cell-group theme="card" title="网络">
    <t-cell title="接口" description="{{rtinfo.network.port}}" hover />
    <t-cell title="无线芯片" description="{{rtinfo.network.wifi}}" hover />
    <t-cell title="无线速率" description="{{rtinfo.network.wifispeed}}" hover />
    <t-cell title="调制解调器" description="{{rtinfo.network.modem}}" hover />
  </t-cell-group>

  <t-cell-group theme="card" title="连接">
    <t-cell title="接口" description="{{rtinfo.connect.port}}" hover />
  </t-cell-group>
</view>

<x-fav id="routerfav" x_pd_id="{{rtinfo.pd_id}}"></x-fav>
